{
    "name": "git-ai-tracking",
    "displayName": "Git AI Tracking",
    "description": "Intelligent autosave & tracking for AI-assisted coding (AWS Q, Copilot, etc.)",
    "version": "1.0.0",
    "publisher": "rdb-platform",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "gitAi.testSignal",
                "title": "Git AI: Test AI Signal (Debug)"
            },
            {
                "command": "gitAi.openFullStats",
                "title": "Git AI: Open Full Stats Report"
            },
            {
                "command": "gitAi.statusBarMenu",
                "title": "Git AI: Status Bar Menu"
            },
            {
                "command": "gitAi.showDebugInfo",
                "title": "Git AI: Show Debug Info"
            },
            {
                "command": "gitAi.installCli",
                "title": "Git AI: Install CLI to PATH"
            },
            {
                "command": "gitAi.installShim",
                "title": "Git AI: Enable Global Interception (Install Shim)"
            },
            {
                "command": "gitAi.fixShellPath",
                "title": "Git AI: Fix Shell Path (Zsh/Bash)"
            }
        ],
        "configuration": {
            "title": "Git AI Integration",
            "properties": {
                "gitAi.humanDebounceMillis": {
                    "type": "number",
                    "default": 5000,
                    "description": "Delay in milliseconds before creating a checkpoint after human typing stops. Higher values reduce frequency."
                },
                "gitAi.statusBarCommitDepth": {
                    "type": "number",
                    "default": 1,
                    "minimum": 1,
                    "description": "Number of recent commits to include in status bar statistics. Set to 1 for just the last commit."
                }
            }
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/minimatch": "^5.1.2",
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.56.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.3.3"
    }
}